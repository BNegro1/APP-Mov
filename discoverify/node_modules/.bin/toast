#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"'" ]; then
  exec "$basedir/NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"'" node "$basedir/../toast/toast-cli.mjs" "$@"
else 
  exec NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"' node "$basedir/../toast/toast-cli.mjs" "$@"
fi
