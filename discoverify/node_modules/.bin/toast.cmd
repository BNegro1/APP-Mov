GOTO start
:find_dp0
SET dp0=%~dp0
EXIT /b
:start
SETLOCAL
CALL :find_dp0

IF EXIST "%dp0%\NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"'.exe" (
  SET "_prog=%dp0%\NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"'.exe"
) ELSE (
  SET "_prog=NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"'"
  SET PATHEXT=%PATHEXT:;.JS;=;%
)

endLocal & goto #_undefined_# 2>NUL || title %COMSPEC% & "%_prog%" node "%dp0%\..\toast\toast-cli.mjs" %*
